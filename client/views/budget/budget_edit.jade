template(name="BudgetEdit")
  .container
    .row
      .col-md-12
        .page-header
          h1
            input(type="text" id="name" class="HeadingInput" placeholder="{{i18n 'budget.name_placeholder' }}" value="{{ name }}")
            .pull-right {{ budgetTotal }}â‚¬

    .row
      .col-xs-12
        .form-group
          a.btn.btn-primary(href="{{ pathFor route='budget.show' }}/download") Download
          a.btn.btn-default(href="{{ pathFor route='budget.show' }}") Ver
    .row
      .col-xs-12
        table.table.table-hover.table-striped
          thead
            tr
              th {{i18n 'product.description' }}
              th {{i18n 'product.price_without_tax' }}
              th {{i18n 'product.quantity' }}
              th {{i18n 'product.total_without_tax' }}
              th
          tbody
            +each products
              +Product data=this parent=..
            +NewProduct
